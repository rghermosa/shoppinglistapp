{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "inlineSourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "lib": [
      "es6"
    ],
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "./dist"
  ]
}